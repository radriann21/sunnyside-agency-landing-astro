---
interface Props {
  title: string;
  paragraph: string;
}

const { title, paragraph } = Astro.props;
---

<article
  class="w-full sm:w-[50%] bg-white flex items-center justify-center py-40 px-16 sm:p-32"
>
  <div class="text-center sm:text-left">
    <h2
      class="font-headings text-6xl sm:text-5xl font-extrabold text-neutral-very-dark-desaturated-blue mb-6"
    >
      {title}
    </h2>
    <p
      class="font-body text-neutral-dark-grayish-blue text-3xl sm:text-sm my-12 sm:my-6 font-semibold leading-8 sm:leading-6"
    >
      {paragraph}
    </p>
    <button
      class="font-headings text-3xl sm:text-base uppercase text-neutral-very-dark-desaturated-blue font-extrabold"
    >
      Learn More
    </button>
  </div>
</article>
